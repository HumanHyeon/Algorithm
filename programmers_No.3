#include <string>
using namespace std;

bool solution(string s) {
	int py[2] = { 0, };
	for (int i = 0; i < s.size(); i++) 
		if (s[i] == 'P' || s[i] == 'p')	py[0]++;
		else if (s[i] == 'Y' || s[i] == 'y') py[1]++;
	return (py[0] == py[1] ? true : false);
}
